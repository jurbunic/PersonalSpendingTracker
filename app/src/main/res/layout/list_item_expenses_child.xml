<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_margin="@dimen/list_item_margin"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:id="@+id/expense_list_item_child_name"
            android:text="Placeholder Name"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/expense_list_item_child_cost"
            android:layout_weight="1"
            android:text="Placeholder Cost"
            android:layout_gravity="right"
            android:gravity="right"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/expense_list_item_child_currency"
            android:layout_weight="1"
            android:layout_gravity="right"
            android:gravity="right"
            android:text="Placeholder Currency"

            />
    </LinearLayout>



</android.support.v7.widget.CardView>